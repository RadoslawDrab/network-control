{
  "name": "network-control",
  "description": "Server app for controlling network devices",
  "author": "Rados≈Çaw Drab",
  "license": "ISC",
  "main": "dist/index.cjs",
  "type": "module",
  "scripts": {
    "start": "dotenvx run -f .env.dev -- concurrently --names=\"SERVER,WATCH\" -c \"auto\" \"npm run start:server\" \"npm run start:app\"",
    "start:app": "vite dev app",
    "start:server": "dotenvx run -f .env.dev -- tsx --watch src/index.ts",
    "prebuild": "shx rm -rf dist/ && npm run type-check",
    "build": "dotenvx run -f .env.prod -- node esbuild.mjs && npm run build:app",
    "build:app": "vite build app",
    "postbuild": "deno compile --allow-all --no-npm -o dist/network-controller --icon ./dist/app/assets/favicon.ico ./dist/index.cjs",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.6.4",
    "@phosphor-icons/vue": "^2.2.1",
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-vue": "^5.1.2",
    "bootstrap": "^5.3.3",
    "bootstrap-vue-next": "^0.24.2",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "esbuild": "^0.23.0",
    "express": "^4.19.2",
    "pinia": "^2.2.1",
    "postject": "^1.0.0-alpha.6",
    "sass": "^1.77.6",
    "shx": "^0.3.4",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "unplugin-vue-components": "^0.27.3",
    "uuid": "^10.0.0",
    "vite": "^5.3.5",
    "vite-plugin-pwa": "^0.20.1",
    "vue": "^3.4.35"
  },
  "dependencies": {
    "@types/argparse": "^2.0.17",
    "argparse": "^2.0.1",
    "deno": "^2.1.4",
    "esbuild-copy-static-files": "^0.1.0",
    "ftpd": "^0.2.16",
    "https": "^1.0.0"
  }
}
