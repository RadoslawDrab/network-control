{
  "include": ["./src/**/*", "./components.d.ts", "./env.d.ts", "../src/types/*.ts"],
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "Node",
    "target": "ES2015",
    "baseUrl": "./src/",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "paths": {
      "src/*": ["./"],
      "assets/*": ["./assets/*"],
      "utils/*": ["./utils/*"],
      "components/*": ["./components/*"],
      "composables/*": ["./composables/*"],
      "public/*": ["../public/*"],
      "types/*": ["../../src/types/*"]
    }
  }
}
